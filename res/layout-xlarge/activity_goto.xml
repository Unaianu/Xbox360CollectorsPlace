<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytGotoMain"
    android:layout_width="500dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:baselineAligned="false"
    android:background="@drawable/background_popup"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/txtGotoTitle"
        style="@style/TxtWindowsStyle"
	    android:text="@string/goto_title"/>
        
    <TextView
        android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
   		android:text="@string/goto_name"
   		android:textSize="16sp"
   		android:textStyle="bold"/>
    
    <EditText
        android:id="@+id/edtGotoTitle"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:inputType="text"
	    android:lines="1"
	    android:textSize="16sp"
   		android:padding="6dp"
 	 	android:hint="@string/goto_name_hint"
	    android:background="@drawable/textfield_background"/>
    
    <TextView
        android:layout_width="match_parent"
 		android:layout_height="wrap_content"
 		android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
   		android:text="@string/goto_year"
   		android:textSize="16sp"
   		android:textStyle="bold"/>
    
    <EditText
        android:id="@+id/edtGotoYear"
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="5dp"
	    android:inputType="number"
	    android:lines="1"
	    android:textSize="16sp"
   		android:padding="6dp"
 	 	android:hint="@string/goto_year_hint"
	    android:maxLength="4"
		android:background="@drawable/textfield_background"/>
                
    <LinearLayout 
        android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:layout_margin="10dp"
   		android:orientation="horizontal"
	    android:gravity="center">
        
	    <Button
	        android:id="@+id/btnAccept"
	        android:layout_width="100dp"
	        android:layout_height="35dp"
	        android:text="@string/goto_button_accept"
	        android:textSize="16sp"
	        android:background="@drawable/button_background"/>
    
    </LinearLayout>
    
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    
    <View 
        android:id="@+id/lytStatus"
        android:layout_alignTop="@+id/lytInfo" 
        android:layout_alignBottom="@+id/lytInfo"
        android:layout_width="7dp"
	    android:layout_height="match_parent"
	    android:layout_alignParentRight="true"/>
      
    <RelativeLayout 
        android:id="@+id/lytInfo"
        android:layout_width="wrap_content"
	    android:layout_toLeftOf="@+id/lytStatus"
		android:layout_height="wrap_content"
	    android:layout_marginRight="6dp">
	    
	    <LinearLayout 
	        android:id="@+id/lytIcon"
	        android:layout_width="50dp"
		    android:layout_height="50dp"
		    android:layout_centerVertical="true"
		    android:padding="3dp">
	        
		    <ImageView
		        android:id="@+id/imgIcon"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:contentDescription="@string/catalog_icon"/>
		    
	    </LinearLayout>
	    
	    <RelativeLayout 
	        android:id="@+id/lytTitle"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/lytIcon"
			android:layout_marginTop="3dp">
	        
		    <TextView
		        android:id="@+id/txtTitle"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_centerVertical="true"
				android:layout_toLeftOf="@+id/imgKinect"
	    		android:textStyle="bold"
			    android:textSize="14sp"
		    	android:textColor="@color/black"/>
		    
		    <ImageView
		        android:id="@+id/imgKinect"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_centerVertical="true"
				android:layout_marginLeft="4dp"
				android:src="@drawable/icon_kinect_2"
				android:contentDescription="@string/catalog_kinect_icon"
				android:visibility="gone"/>
		    
	    </RelativeLayout>
	    
	    <RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@+id/lytIcon"
			android:layout_below="@+id/lytTitle"
			android:layout_marginTop="5dp">
		    
	         <LinearLayout 
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_toLeftOf="@+id/lytAchievements"
			    android:layout_marginLeft="1dp"
		    	android:layout_marginRight="7dp"
		    	android:orientation="horizontal">
		        
			    <TextView
			        android:id="@+id/txtDescYear"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textStyle="normal"
				    android:textSize="13sp"
		    		android:textColor="@color/black"
				    android:visibility="gone"/>
			    
			    <TextView
			        android:id="@+id/txtYear"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textStyle="normal"
				    android:textSize="13sp"
		    		android:textColor="@color/black"/>
		
		    </LinearLayout>
		    
		    <TextView
		        android:id="@+id/txtStatus"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:textStyle="normal"
			    android:textSize="13sp"
		    	android:textColor="@color/black"
			    android:visibility="gone"/>
		    
		    <LinearLayout 
		        android:id="@+id/lytAchievements"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:orientation="horizontal">
			    
		        <TextView
			        android:id="@+id/txtDescAchievements"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textStyle="normal"
				    android:textSize="13sp"
		    		android:textColor="@color/black"
				    android:visibility="gone"/>
		        
			    <TextView
			        android:id="@+id/txtAchievements"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textStyle="normal"
				    android:textSize="13sp"
		    		android:textColor="@color/black"/>
			    
			    <ImageView
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="2dp"
		    		android:layout_marginLeft="4dp"
		    		android:contentDescription="@string/catalog_gamerscore"
				    android:src="@drawable/icon_gamerscore"/>
		    
			</LinearLayout>	  
			
		    <TextView
		        android:id="@+id/txtDescGenre"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="gone"
		    	android:textColor="@color/black"/>
		    
		    <TextView
		        android:id="@+id/txtGenre"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:visibility="gone"
		    	android:textColor="@color/black"/>
			    
		</RelativeLayout>
	
    </RelativeLayout>
    
</RelativeLayout>